<%#= form_with model: @organization do |form| %>
  <%#= form.text_field :name %>
  <%#= form.select :organization_type, ["personal", "business"] %>
  <%#= form.submit %>
<%# end %>

<nav class="mb-3" aria-label="breadcrumb">
  <ol class="breadcrumb mb-0">
    <li class="breadcrumb-item"><a href="<%= organizations_path %>">Organizations</a></li>
    <li class="breadcrumb-item active">New</li>
  </ol>
</nav>

<h2 class="mb-4">Create an organization</h2>

<div class="row">
  <div class="col-xl-9">
    <%= form_with model: @organization, class: "row g-3 mb-6" do |form| %>
      <div class="col-sm-6 col-md-8">
        <div class="form-floating">
          <%= form.text_field :name, class: "form-control" %>
          <label for="floatingInputGrid">Name</label>
        </div>
      </div>

      <div class="col-sm-6 col-md-8">
        <div class="form-floating">
          <%= form.text_field :email, class: "form-control" %>
          <label for="floatingInputGrid">Email</label>
        </div>
      </div>

      <div class="col-sm-6 col-md-4">
        <div class="form-floating">
          <%= form.select :organization_type, ["personal", "business"], {}, {class: "form-select"} %>
          <label for="floatingSelectTask">Type</label>
        </div>
      </div>

      <div class="col-12 gy-6">
        <div class="row g-3 justify-content-end">
          <div class="col-auto">
            <%= link_to "Cancel", organizations_path, class: "btn btn-phoenix-primary px-5" %>
          </div>
          <div class="col-auto">
            <%= form.submit "Create Organization", class: "btn btn-primary px-5 px-sm-15" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
