<div class="container">
  <div class="row flex-center min-vh-100 py-5">
    <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="text-center mb-7">
          <h3 class="text-body-highlight">Sign In</h3>
        </div>
        <div class="mb-3 text-start">
          <%= f.label :email, class: "form-label" %>
          <div class="form-icon-container">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-icon-input" %>
          </div>
        </div>
        <div class="mb-3 text-start">
          <%= f.label :password, class: "form-label" %>
          <div class="form-icon-container" data-password="data-password">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-icon-input pe-6" %>
          </div>
        </div>
        <div class="row flex-between-center mb-7">
          <% if devise_mapping.rememberable? %>
            <div class="col-auto">
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label mb-0" %>
              </div>
            </div>
          <% end %>
          <div class="col-auto">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "fs-9 fw-semibold" %>
          </div>
        </div>
        <%= f.submit "Sign In", class: "btn btn-primary w-100 mb-3" %>

        <div class="text-center">
          <%= link_to "Create an account", new_registration_path(resource_name), class: "fs-9 fw-bold" %>
        </div>
        <% end %>
    </div>
  </div>
</div>