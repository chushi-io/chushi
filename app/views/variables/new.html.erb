<div class="w-full max-w-xs">
  <%= form_with model: @variable do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class: "input input-bordered w-full max-w-xs" %>

    <%= form.label :value %>
    <%= form.text_field :value, class: "input input-bordered w-full max-w-xs" %>

    <%= form.label :description %>
    <%= form.text_field :description, class: "input input-bordered w-full max-w-xs" %>

    <%= check_box_tag(:sensitive, {checked: true}) %>
    <%= label_tag(:sensitive, "Sensitive") %>

    <br>

    <% if @workspace.present? %>
    <%= form.hidden_field :workspace, value: @workspace.id %>
    <% end %>
    <%= form.label :variable_type %>
    <%= form.select :variable_type, ["environment", "hcl"], {}, class: "select select-bordered w-full max-w-xs" %>

    <%= form.submit "Create Variable", class: "btn btn-primary btn-sm" %>
  <% end %>
</div>