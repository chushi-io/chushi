<div class="mb-9">
  <div data-list='{"valueNames":["projectName","assignees","start","deadline","task","projectprogress","status","action"],"page":6,"pagination":true}'>
    <div class="row mb-4 gx-6 gy-3 align-items-center">
      <div class="col-auto">
        <h2 class="mb-0">Run Tasks</h2>
      </div>
      <div class="col-auto">
        <%= link_to "Create Run Task", new_run_task_path(@organization.name), class: "btn btn-primary px-5" %>
      </div>
    </div>

    <div class="table-responsive scrollbar">
      <table class="table fs-9 mb-0 border-top border-translucent">
        <thead>
        <tr>
          <th class="sort white-space-nowrap align-middle ps-0" scope="col" data-sort="projectName" style="width:30%;">Name</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="id" style="width:10%;">Description</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">URL</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">Category</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="id" style="width:10%;">Enabled</th>
        </tr>
        </thead>
        <tbody class="list" id="project-list-table-body">
        <% @run_tasks.each do |run_task| %>
          <tr class="position-static">
            <td class="align-middle time white-space-nowrap ps-0 projectName py-4">
              <a class="fw-bold fs-8" href="<%= run_task_path(@organization.name, run_task.external_id) %>">
                <%= run_task.name %>
              </a>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= run_task.description %>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= run_task.url %>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= run_task.category %>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= run_task.enabled %>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
