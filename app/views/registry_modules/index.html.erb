<nav class="mb-3" aria-label="breadcrumb">
  <ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">Registry</li>
    <li class="breadcrumb-item">Modules</li>
  </ol>
</nav>

<div class="mb-9">
  <div data-list='{"valueNames":["projectName","assignees","start","deadline","task","projectprogress","status","action"],"page":6,"pagination":true}'>
    <div class="row mb-4 gx-6 gy-3 align-items-center">
      <div class="col-auto">
        <h2 class="mb-0">Modules</h2>
      </div>
      <div class="col-auto">
        <%= link_to "Create Module", new_registry_module_path(@organization.name), class: "btn btn-primary px-5" %>
      </div>
    </div>

    <div class="table-responsive scrollbar">
      <table class="table fs-9 mb-0 border-top border-translucent">
        <thead>
        <tr>
          <th class="sort white-space-nowrap align-middle ps-0" scope="col" data-sort="projectName" style="width:30%;">Namespace</th>
          <th class="sort white-space-nowrap align-middle ps-0" scope="col" data-sort="projectName" style="width:30%;">Name</th>
          <th class="sort white-space-nowrap align-middle ps-0" scope="col" data-sort="projectName" style="width:30%;">Provider</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">Registry</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">Status</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">Latest Version</th>
          <th class="sort align-middle ps-3" scope="col" data-sort="type" style="width:10%;">Created At</th>
        </tr>
        </thead>
        <tbody class="list" id="project-list-table-body">
        <% @modules.each do |registry_module| %>
          <tr class="position-static">
            <td class="align-middle time white-space-nowrap ps-0 projectName py-4">
              <a class="fw-bold fs-8" href="<%= registry_module_path(@organization.name, registry_module.external_id) %>">
                <%= registry_module.namespace %>
              </a>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= registry_module.name %>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              <%= registry_module.provider %>
            </td>
            <td class="align-middle white-space-nowrap assignees ps-3 py-4">
              private
            </td>
            <td class="align-middle white-space-nowrap start ps-3 py-4">
              <p class="mb-0 fs-9 text-body"><%= registry_module.status %></p>
            </td>
            <td class="align-middle white-space-nowrap deadline ps-3 py-4">
              <p class="mb-0 fs-9 text-body">N/A</p>
            </td>
            <td class="align-middle white-space-nowrap task ps-3 py-4">
              <p class="fw-bo text-body fs-9 mb-0"><%= registry_module.created_at %></p>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
