<h2 class="mb-4">Create a token</h2>

<div class="row">
  <div class="col-xl-9">
    <%= form_with model: @token, class: "row g-3 mb-6", url: settings_tokens_path do |form| %>
      <div class="col-sm-6 col-md-8">
        <div class="form-floating">
          <%= form.text_field :name, class: "form-control" %>
          <label for="floatingInputGrid">Name</label>
        </div>
      </div>
<!--      <div class="col-sm-6 col-md-8">-->
<!--        <div class="form-floating">-->
          <%#= form.text_field :expires_at, class: "form-control" %>
<!--          <label for="floatingInputGrid">Expire</label>-->
<!--        </div>-->
<!--      </div>-->

      <div class="col-12 gy-6">
        <div class="row g-3 justify-content-end">
          <div class="col-auto">
            <%= link_to "Cancel", settings_tokens_path, class: "btn btn-phoenix-primary px-5" %>
          </div>
          <div class="col-auto">
            <%= form.submit "Create Token", class: "btn btn-primary px-5 px-sm-15" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
